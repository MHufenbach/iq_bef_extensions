<?php

use Drupal\iq_bef_extensions\Helper\ViewsBefExtender;
use Drupal\iq_bef_extensions\Helper\ViewsVeflBefExtender;

function iq_bef_extensions_views_plugins_exposed_form_alter(array &$info)
{
  if (isset($info['bef'])) {
    $info['bef']['class'] = ViewsBefExtender::class;
  }
  if (isset($info['vefl_bef'])) {
    $info['vefl_bef']['class'] = ViewsVeflBefExtender::class;
  }
}
